<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@mipmap/wxbg"
            app:riv_oval="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小宇哥"
                android:textColor="@color/white"
                android:textSize="@dimen/alivc_common_font_14" />

            <TextView
                android:id="@+id/instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="穷，没钱"
                android:textColor="@color/white"
                android:textSize="@dimen/alivc_common_font_14" />

            <TextView
                android:id="@+id/huifu_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="回复了你的评论 2020-03-06"
                android:textColor="#B5B1B1"
                android:textSize="@dimen/alivc_common_font_12" />

        </LinearLayout>

        <ImageView
            android:id="@+id/xiaoxi_img"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:background="@mipmap/wxbg" />


    </LinearLayout>


</LinearLayout>

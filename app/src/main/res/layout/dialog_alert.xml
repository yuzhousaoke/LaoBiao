<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_white_oil_rounded_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/msg_tv"
        style="@style/tv_match_style"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_50"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text=""
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/cut_off1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/tv_cancel"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/cut_tv"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:background="@color/cut_off1" />

        <Button
            android:id="@+id/sure_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/tv_sure"
            android:textColor="@color/home_check"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>


</LinearLayout>

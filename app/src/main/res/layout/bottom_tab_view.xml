<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_58"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/bottom_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alivc_little_bottom_bg_height"
        android:layout_gravity="bottom">

        <FrameLayout
            android:id="@+id/bottomLy1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_home_icon"
                android:layout_width="@dimen/alivc_little_bottom_tab_icon_height"
                android:layout_height="@dimen/alivc_little_bottom_tab_icon_width"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@mipmap/alivc_icon_bottom_home" />

            <TextView
                android:id="@+id/bottomText1"
                android:layout_width="@dimen/alivc_little_bottom_tab_underline_width"
                android:layout_height="@dimen/alivc_little_bottom_tab_underline_height"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/home_blue" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottomLy2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/alivc_little_bottom_tab_icon_height"
                android:layout_height="@dimen/alivc_little_bottom_tab_icon_width"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@mipmap/hongbao" />

            <TextView
                android:id="@+id/bottomText2"
                android:layout_width="@dimen/alivc_little_bottom_tab_underline_width"
                android:layout_height="@dimen/alivc_little_bottom_tab_underline_height"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/home_blue"
                android:visibility="gone"/>
        </FrameLayout>

        <android.widget.Space
            android:layout_width="@dimen/alivc_little_bottom_tab_more_width"
            android:layout_height="@dimen/alivc_little_bottom_tab_more_height"
            android:layout_gravity="center"
            android:layout_marginTop="-2dp"
            android:layout_weight="1" />



        <FrameLayout
            android:id="@+id/bottomLy3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="@dimen/alivc_little_bottom_tab_icon_height"
                android:layout_height="@dimen/alivc_little_bottom_tab_icon_width"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@mipmap/msg" />

            <TextView
                android:id="@+id/bottomText3"
                android:layout_width="@dimen/alivc_little_bottom_tab_underline_width"
                android:layout_height="@dimen/alivc_little_bottom_tab_underline_height"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/home_blue"
                android:visibility="gone"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottomLy4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tab_user_icon"
                android:layout_width="@dimen/alivc_little_bottom_tab_icon_height"
                android:layout_height="@dimen/alivc_little_bottom_tab_icon_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@mipmap/alivc_icon_bottom_user" />

            <TextView
                android:id="@+id/bottomText4"
                android:layout_width="@dimen/alivc_little_bottom_tab_underline_width"
                android:layout_height="@dimen/alivc_little_bottom_tab_underline_height"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/home_blue"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_recorder"
        android:layout_width="@dimen/alivc_little_bottom_tab_more_width"
        android:layout_height="@dimen/alivc_little_bottom_tab_more_height"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="6dp"
        android:src="@mipmap/alivc_icon_bottom_recorder_normal" />
</FrameLayout>